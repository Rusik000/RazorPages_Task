@page
@model RazorPages_Task.Pages.IndexModel
@{

}
<!DOCTYPE html>

<html>

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <h1>Persons</h1>
    <a href="/Add/AddPage">Add</a> |
    <a  href="/Delete/DeletePage">Delete</a> |
    <a  href="/Update/UpdatePage">Update</a>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Address</th>
                <th scope="col">Age</th>
                <th scope="col">Salary</th>
                <th scope="col">Edit</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Persons)
            {
                <tr>
                    <th scope="row">@p.Id</th>
                    <td>@p.Name</td>
                    <td>@p.Surname</td>
                    <td>@p.Address</td>
                    <td>@p.Age</td>
                    <td>@p.Salary</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
